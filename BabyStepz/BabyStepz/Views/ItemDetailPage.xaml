<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BabyStepz.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Text:" FontSize="Large" TextColor="White"/>
        <Label Text="{Binding Item.Text}" FontSize="Medium" TextColor="#999999"/>
        <Label Text="Description:" FontSize="Large"  TextColor="White"/>
        <Label Text="{Binding Item.Description}" FontSize="Medium" TextColor="#999999"/>   

        
    </StackLayout>
</ContentPage>