<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BabyStepz.Views.ItemDetailPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}"
    Style="{x:DynamicResource basicContentPageStyle}">

    <StackLayout Padding="15,15,15,15" Spacing="20">
        <Label
            FontSize="Large"
            Text="Task:"
            TextColor="{x:DynamicResource PrimaryTextColor}" />
        <BoxView
            BackgroundColor="{x:DynamicResource PrimaryLightColor}"
            HeightRequest="1"
            HorizontalOptions="FillAndExpand" />
        <Label
            FontSize="Medium"
            Text="{Binding Item.Text}"
            TextColor="{x:DynamicResource AltTextColor}" />
        <Label
            FontSize="Large"
            Text="Description:"
            TextColor="{x:DynamicResource PrimaryTextColor}" />
        <BoxView
            BackgroundColor="{x:DynamicResource PrimaryLightColor}"
            HeightRequest="1"
            HorizontalOptions="FillAndExpand" />
        <Label
            FontSize="Medium"
            Text="{Binding Item.Description}"
            TextColor="{x:DynamicResource AltTextColor}" />
    </StackLayout>
</ContentPage>