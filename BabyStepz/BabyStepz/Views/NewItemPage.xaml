<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="BabyStepz.Views.NewItemPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="New Task">
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="Save_Clicked" Text="Save" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="15" Spacing="20">
            <Label
                FontSize="Medium"
                Text="Titel"
                TextColor="{x:StaticResource PrimaryTextColor}" />
            <Entry
                FontSize="Small"
                Text="{Binding Item.Text}"
                TextColor="{x:StaticResource AltTextColor}" />
            <Label
                FontSize="Medium"
                Text="Description"
                TextColor="{x:StaticResource PrimaryTextColor}" />
            <Editor
                Margin="0"
                FontSize="Small"
                Text="{Binding Item.Description}"
                TextColor="{x:StaticResource AltTextColor}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
