<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BabyStepz.Views.CameraPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:BabyStepz.ViewModels"
    x:Name="CameraView"
    Title="{Binding Title}"
    Style="{x:DynamicResource basicContentPageStyle}">
    <ContentPage.BindingContext>
        <vm:CameraViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image x:Name="PhotoImage" Grid.ColumnSpan="3" />

            <Switch
                x:Name="SaveSwitch"
                Grid.Row="1"
                Grid.Column="2"
                HorizontalOptions="CenterAndExpand"
                IsToggled="False"
                Toggled="SaveSwitch_Toggled"
                VerticalOptions="CenterAndExpand" />

            <Button
                x:Name="CameraButton"
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="1"
                Margin="3,0,0,3"
                Clicked="CameraButton_Clicked"
                Style="{x:DynamicResource basicButtonStyle}"
                Text="Take Photo"
                VerticalOptions="EndAndExpand" />
        </Grid>

    </ContentPage.Content>
</ContentPage>